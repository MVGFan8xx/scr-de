name: CI Check

on:
  push:
    branches: [ "main", "dev" ]
  pull_request:

jobs:
  test-lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - run: npm ci
      - run: npm run lint || npx eslint .
      - run: node --check index.js
      - run: npm test || echo "Keine Tests vorhanden"
